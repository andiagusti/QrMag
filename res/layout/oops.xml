<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f39c12"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ScanActivity" >

    <TextView
        android:id="@+id/OopsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center_horizontal"
        android:text="Oops"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/OopsMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/OopsTitle"
        android:layout_below="@+id/OopsTitle"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center_horizontal"
        android:text="The QR code you scanned didn&apos;t contain a valid tag"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/OopsTryAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/OopsMessage"
        android:layout_below="@+id/OopsMessage"
        android:layout_marginTop="27dp"
        android:background="@drawable/btn_flat"
        android:fontFamily="sans-serif-condensed"
        android:onClick="TryAgain"
        android:padding="10dp"
        android:paddingBottom="13dp"
        android:text="Try Again"
        android:textColor="#ffffff"
        android:textSize="25sp" />

</RelativeLayout>